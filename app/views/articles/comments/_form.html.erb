<h3>Post a Comment</h3>

<%= form_for [ @article, @comment ] do |f| %>
  <p>
    <%= f.label :author_name, "Who you is?" %><br/>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body,"What you writing?" %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
